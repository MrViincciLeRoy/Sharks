<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_erpnext_config_form" model="ir.ui.view">
        <field name="name">erpnext.config.form</field>
        <field name="model">erpnext.config</field>
        <field name="arch" type="xml">
            <form string="ERPNext Configuration">
                <header>
                    <button name="test_connection" 
                            string="Test Connection" 
                            type="object" 
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="base_url" placeholder="https://yourerpnext.com"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="api_key"/>
                            <field name="api_secret" password="True"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <group string="Mapping Configuration">
                        <group>
                            <field name="default_company" placeholder="Your Company"/>
                            <field name="bank_account" placeholder="Bank - Company"/>
                        </group>
                        <group>
                            <field name="default_cost_center" placeholder="Main - Company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_erpnext_config_tree" model="ir.ui.view">
        <field name="name">erpnext.config.tree</field>
        <field name="model">erpnext.config</field>
        <field name="arch" type="xml">
            <tree string="ERPNext Configurations">
                <field name="name"/>
                <field name="base_url"/>
                <field name="default_company"/>
                <field name="active"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <record id="action_erpnext_config" model="ir.actions.act_window">
        <field name="name">ERPNext Configuration</field>
        <field name="res_model">erpnext.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_erpnext_root" 
              name="ERPNext" 
              sequence="50"/>
    <menuitem id="menu_erpnext_config" 
              name="Configuration" 
              parent="menu_erpnext_root" 
              action="action_erpnext_config" 
              sequence="10"/>
</odoo>
