<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Statement Form View -->
    <record id="view_customer_statement_form" model="ir.ui.view">
        <field name="name">customer.statement.form</field>
        <field name="model">customer.statement</field>
        <field name="arch" type="xml">
            <form string="Customer Statement">
                <header>
                    <button name="action_fetch_from_erpnext" 
                            string="🔄 Fetch from ERPNext" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_print_statement" 
                            string="🖨️ Print PDF" 
                            type="object" 
                            class="btn-primary"
                            invisible="state == 'draft'"/>
                    <button name="action_send_email" 
                            string="📧 Send Email" 
                            type="object"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,sent,paid"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_lines" icon="fa-list">
                            <field name="line_count" widget="statinfo" string="Transactions"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="statement_number" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="customer_id" options="{'no_create': True}"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group string="Period">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="template_id"/>
                        </group>
                        <group string="Balances">
                            <field name="opening_balance" widget="monetary"/>
                            <field name="closing_balance" widget="monetary" class="fw-bold"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Summary">
                            <field name="total_invoiced" widget="monetary"/>
                            <field name="total_paid" widget="monetary"/>
                            <field name="total_credits" widget="monetary"/>
                        </group>
                        <group string="AI Prediction" invisible="not predicted_payment_date">
                            <field name="predicted_payment_date"/>
                            <field name="payment_confidence" widget="percentage"/>
                        </group>
                    </group>
                    
                    <!-- Aging Analysis -->
                    <group string="Aging Analysis" invisible="state == 'draft'">
                        <group>
                            <field name="current_amount" widget="monetary"/>
                            <field name="days_30" widget="monetary"/>
                            <field name="days_60" widget="monetary"/>
                        </group>
                        <group>
                            <field name="days_90" widget="monetary"/>
                            <field name="days_90_plus" widget="monetary" class="text-danger"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Transaction Lines">
                            <field name="line_ids" nolabel="1">
                                <tree decoration-danger="line_type=='invoice' and days_overdue > 0"
                                      decoration-success="line_type=='payment'">
                                    <field name="date"/>
                                    <field name="line_type" widget="badge" 
                                           decoration-danger="line_type=='invoice'"
                                           decoration-success="line_type in ['payment', 'credit']"/>
                                    <field name="reference"/>
                                    <field name="description"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="outstanding" sum="Outstanding"/>
                                    <field name="running_balance"/>
                                    <field name="due_date" optional="hide"/>
                                    <field name="days_overdue" optional="show"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Notes">
                            <group>
                                <field name="notes" placeholder="Notes visible to customer..."/>
                                <field name="internal_notes" placeholder="Internal notes (not printed)..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Customer Statement Tree View -->
    <record id="view_customer_statement_tree" model="ir.ui.view">
        <field name="name">customer.statement.tree</field>
        <field name="model">customer.statement</field>
        <field name="arch" type="xml">
            <tree string="Customer Statements" 
                  decoration-danger="state=='sent' and closing_balance > 0"
                  decoration-success="state=='paid'">
                <field name="statement_number"/>
                <field name="customer_name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="closing_balance" sum="Total Outstanding"/>
                <field name="line_count"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-warning="state=='sent'"
                       decoration-success="state=='paid'"/>
            </tree>
        </field>
    </record>

    <!-- Customer Statement Search View -->
    <record id="view_customer_statement_search" model="ir.ui.view">
        <field name="name">customer.statement.search</field>
        <field name="model">customer.statement</field>
        <field name="arch" type="xml">
            <search string="Search Statements">
                <field name="statement_number"/>
                <field name="customer_id"/>
                <field name="customer_name"/>
                
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                
                <separator/>
                <filter string="Has Outstanding" name="has_outstanding" 
                        domain="[('closing_balance', '>', 0)]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('date_to', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')),
                                 ('date_to', '&lt;=', context_today())]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'date_to'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_customer_statement" model="ir.actions.act_window">
        <field name="name">Customer Statements</field>
        <field name="res_model">customer.statement</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate your first customer statement
            </p>
            <p>
                Statements show customer transactions, outstanding balances, and aging analysis.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_statements" 
              name="Statements" 
              parent="menu_custategen_root" 
              action="action_customer_statement" 
              sequence="20"/>
</odoo>